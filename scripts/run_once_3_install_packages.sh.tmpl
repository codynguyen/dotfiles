{{- if eq .chezmoi.os "linux" -}}
#!/bin/sh

if command -v apt &> /dev/null;
then
    sudo apt install -y ripgrep neofetch vim
elif command -v dnf &> /dev/null;
then
    sudo dnf install -y ripgrep neofetch vim
fi
# End
{{ else if eq .chezmoi.os "darwin" -}}
#!/bin/sh
brew install ripgrep neofetch vim
{{ end -}}
